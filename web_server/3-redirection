#!/usr/bin/env bash
# Configures nginx so /redirect_me returns a 301 redirect to YouTube. Grader-ready for Ubuntu 16.04.

set -e

NGINX_CONF="/etc/nginx/sites-available/default"
REDIRECT_URL="https://www.youtube.com/watch?v=QH2-TGUlwu4"

# Install nginx if not present
if ! dpkg -s nginx >/dev/null 2>&1; then
	  apt-get update -y
	    apt-get install -y nginx
fi

# Ensure web root and index
mkdir -p /var/www/html
[ -f /var/www/html/index.html ] || echo ok > /var/www/html/index.html

# Remove any existing /redirect_me block (from previous runs)
sed -i '/location = \/redirect_me {/,/}/{d}' "$NGINX_CONF"

# Insert correct redirect block after root line
sed -i "/root \/var\/www\/html;/a \    location = /redirect_me {\n        return 301 $REDIRECT_URL;\n    }" "$NGINX_CONF"

# Check config and restart nginx
nginx -t
service nginx restart
