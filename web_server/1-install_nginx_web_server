#!/usr/bin/env bash
# Script that installs and configures nginx to return 'Holberton School' on root /

# Update package list
apt-get update -y

# Install nginx
apt-get install -y nginx

# Start nginx (without using systemctl)
service nginx start || /etc/init.d/nginx start

# Replace default nginx index.html content
echo "Holberton School" > /var/www/html/index.nginx-debian.html

# Ensure nginx listens on port 80 (default usually does, but force it)
sed -i 's/listen 80 default_server;/listen 80 default_server;/g' /etc/nginx/sites-available/default

# Restart nginx to apply changes
service nginx restart || /etc/init.d/nginx restart
